<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ronald.medin.Activities.InsertMeasurementActivity"
    tools:showIn="@layout/activity_insert_measurement">

    <Spinner
        android:id="@+id/insertMeasurement_NameSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:minHeight="35dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:entries="@array/insertMeasurementNameSpinner">
    </Spinner>

    <EditText
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/insertMeasurement_NameSpinner"
        android:id="@+id/insertMeasurement_EditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        android:hint="Druh měření"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/insertMeasurement_EditValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:hint="Hodnota"
        app:layout_constraintTop_toBottomOf="@id/insertMeasurement_EditName"
        app:layout_constraintLeft_toLeftOf="@id/insertMeasurement_EditName"/>
    <Spinner
        android:id="@+id/insertMeasurement_UnitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/insertMeasurement_EditName"
        app:layout_constraintBottom_toBottomOf="@id/insertMeasurement_EditValue"
        android:minWidth="100dp"
        app:layout_constraintLeft_toRightOf="@id/insertMeasurement_EditValue"
        android:entries="@array/insertMeasurementUnitSpinner"
        >
    </Spinner>

    <EditText
        android:visibility="invisible"
        android:id="@+id/insertMeasurement_EditUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/insertMeasurement_UnitSpinner"
        android:minWidth="100dp"
        android:text="Jednotka"
        app:layout_constraintLeft_toRightOf="@id/insertMeasurement_EditValue"/>

    <Button
        android:id="@+id/insertMeasurement_ButtonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uložit"
        android:onClick="InsertMeasurement"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />

</android.support.constraint.ConstraintLayout>
