<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ronald.medin.Activities.DoctorInfo"
    tools:showIn="@layout/activity_doctor_info">

    <EditText
        android:id="@+id/doctorinfo_specialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:focusable="false"
        android:clickable="false"/>
    <EditText
        android:id="@+id/doctorinfo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doctorinfo_specialization"
        android:textColor="@color/black"
        android:focusable="false"
        android:clickable="false"/>
    <EditText
        android:id="@+id/doctorinfo_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textColor="@color/black"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/doctorinfo_name" />

    <Button
        android:id="@+id/doctorinfo_editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/doctorinfo_surname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPersonName"
        android:text="Změnit"
        android:onClick="EditDoctor"/>

    <Button
        android:id="@+id/doctorinfo_saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/doctorinfo_surname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPersonName"
        android:text="Uložit"
        android:visibility="gone"
        android:onClick="UpdateDoctor"/>

    <Button
        android:id="@+id/doctorinfo_deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/doctorinfo_editBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPersonName"
        android:text="Odstranit"
        android:onClick="DeleteDoctor"/>

</android.support.constraint.ConstraintLayout>
